@using OdeToFood.Core
@model Resturant

<div class="panel panel-default">
    <div class="panel panel-heading">
        <h3>@Model.Name</h3>
    </div>
    <div class="panel panel-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="panel panel-footer">
        <a class="btn btn-lg" asp-page="./Details" asp-route-resturantID="@Model.ID">
            <i class="glyphicon glyphicon-zoom-in"></i>
        </a>
        <a class="btn btn-lg" asp-page="./Edit" asp-route-resturantID="@Model.ID">
            <i class="glyphicon glyphicon-edit"></i>
        </a>
        <a class="btn btn-lg" asp-page="./Delete" asp-route-resturantID="@Model.ID">
            <i class="glyphicon glyphicon-trash"></i>
        </a>
    </div>
</div>
